extends layout

block alerts
  #alerts.alerts

block content
  .jumbotron
    h1= title
    p Welcome to #{title}

  .container
    .panel
      .form-group
        .input-group
          span.input-group-addon
            span.glyphicon.glyphicon-envelope
          input.form-control(id='Message',type='text',name='name',placeholder='Your Message')
        
      button.btn.btn-primary.btn-lg(type='button',id='Send')
        span.glyphicon.glyphicon-star Send

    .panel
      .panel.panel-primary
        .panel-body Messages
        #Messages.panel-footer